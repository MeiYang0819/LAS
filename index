<script>

/* === ğŸ® NFT Ã— NFC äº’å‹•ä»»å‹™ï¼šJS ä¸»ç¨‹å¼ === */

const API_BASE = "https://script.google.com/macros/s/AKfycbxWhBXokjK37fAJVmxsP0ho0CKaj6JAm6150C4HLfmFJ89v2xGwGhYR85yjwPaXcxU6og/exec";
const nickname = "Tester";
let currentStep = 1;
let lastRank = null;
let sounds = {};
let map, markers = {};

// ğŸ•¹ï¸ åˆå§‹åŒ–
window.addEventListener("DOMContentLoaded", async () => {
  preloadSounds();
  initMap();
  initLeaderboard();
  const saved = localStorage.getItem("wedding_progress");
  if (saved) currentStep = parseInt(saved);
  showStep(currentStep);
  await signin();
  loopLeaderboard();
});

// === ğŸ”Š éŸ³æ•ˆ ===
function preloadSounds() {
  const files = {
    beep: "https://actions.google.com/sounds/v1/alarms/beep_short.ogg",
    success: "https://actions.google.com/sounds/v1/cartoon/wood_plank_flicks.ogg",
    clear: "https://actions.google.com/sounds/v1/alarms/alarm_clock.ogg",
    correct: "https://actions.google.com/sounds/v1/cartoon/clang_and_wobble.ogg",
    error: "https://actions.google.com/sounds/v1/cartoon/cartoon_boing.ogg",
    bonus: "https://actions.google.com/sounds/v1/cartoon/concussive_drum_hit.ogg",
    mystery: "https://actions.google.com/sounds/v1/cartoon/clang_and_wobble.ogg"
  };
  for (const [k, v] of Object.entries(files)) {
    const a = new Audio(v);
    a.volume = 0.5;
    sounds[k] = a;
  }
}
function playSound(name) {
  if (sounds[name]) {
    sounds[name].currentTime = 0;
    sounds[name].play().catch(()=>{});
  }
}

// === ğŸ“ ä»»å‹™æµç¨‹ ===
async function signin() {
  try {
    const res = await fetch(API_BASE + "?action=signin", {
      method: "POST",
      body: JSON.stringify({ nickname }),
      headers: { "Content-Type": "application/json" }
    });
    const data = await res.json();
    console.log("ç™»å…¥çµæœ", data);
  } catch (e) { console.warn(e); }
}

function nextStep(step) {
  playSound("beep");
  document.getElementById("step" + step).classList.add("hidden");
  const next = step + 1;
  if (next <= 6) {
    document.getElementById("step" + next).classList.remove("hidden");
    glowMarker(next);
    currentStep = next;
    localStorage.setItem("wedding_progress", currentStep);
    playSound("success");
  } else {
    document.getElementById("done").classList.remove("hidden");
    playSound("clear");
    currentStep = 7;
    localStorage.setItem("wedding_progress", currentStep);
  }
}

function showStep(step) {
  for (let i=1; i<=6; i++) {
    document.getElementById("step"+i).classList.add("hidden");
  }
  if (step <= 6) document.getElementById("step"+step).classList.remove("hidden");
  else document.getElementById("done").classList.remove("hidden");
}

// === ğŸ—ºï¸ åœ°åœ– ===
function initMap() {
  map = L.map('map', { zoomControl: false, minZoom: 0, maxZoom: 4, crs: L.CRS.Simple });
  const bounds = [[0,0],[1000,1000]];
  const image = L.imageOverlay('https://upload.wikimedia.org/wikipedia/commons/6/6c/BlankMap-World-v2.png', bounds).addTo(map);
  map.fitBounds(bounds);
  const nodes = [
    {id:1, name:"ç°½åˆ°", x:200, y:200},
    {id:2, name:"ç°½å", x:400, y:250},
    {id:3, name:"æ‰¾æ‹›å¾…", x:600, y:300},
    {id:4, name:"æ‹ç…§", x:800, y:350},
    {id:5, name:"æ‹¼åœ–", x:500, y:600},
    {id:6, name:"æ¸¬é©—", x:700, y:700},
    {id:7, name:"å½©è›‹ ğŸ", x:300, y:700}
  ];
  nodes.forEach(n => {
    const status = n.id < currentStep ? "âœ…" : (n.id === currentStep ? "â–¶ï¸" : "ğŸ”’");
    const marker = L.marker(map.unproject([n.x, n.y], map.getMaxZoom()), {
      title: n.name
    }).addTo(map).bindTooltip(`${status} ${n.name}`, {permanent:true, direction:"top"});
    markers[n.id] = marker;
  });
}
function glowMarker(id) {
  const m = markers[id];
  if (!m) return;
  const el = m.getElement();
  if (!el) return;
  el.classList.add("glow");
  setTimeout(()=>el.classList.remove("glow"), 700);
}

// === ğŸ† æ’è¡Œæ¦œ ===
let leaderboard = [];
function initLeaderboard() {
  renderLeaderboard();
}
function loopLeaderboard() {
  setInterval(updateLeaderboard, 2000);
}
function renderLeaderboard() {
  const list = document.getElementById("leaderList");
  list.innerHTML = "";
  leaderboard.forEach((p,i)=>{
    const div = document.createElement("div");
    div.className = "leader-item" + (p.name===nickname?" leader-self":"");
    div.innerHTML = `<span>${i+1}. ${p.name}</span><span>${p.score}</span>`;
    list.appendChild(div);
  });
}
function fakeLeaderboardData() {
  const names = ["Tester","Alice","Bob","Carol","David","Emma","Frank","Grace","Henry","Ivy"];
  return names.map(n=>({ name:n, score: Math.floor(Math.random()*200)+50 }));
}
function updateLeaderboard() {
  const newData = fakeLeaderboardData().sort((a,b)=>b.score-a.score);
  const myIndex = newData.findIndex(p=>p.name===nickname);
  const myRank = myIndex+1;
  if (lastRank && myRank !== lastRank) {
    showRankChange(myRank < lastRank ? "up" : "down");
  }
  lastRank = myRank;
  leaderboard = newData;
  renderLeaderboard();
}
function showRankChange(dir) {
  const el = document.getElementById("rankChange");
  el.textContent = dir==="up" ? "ğŸ‰ ä¸Šå‡ä¸€ä½ï¼" : "ğŸ˜… è¢«æ¨ä¸‹å»ä¸€ä½...";
  el.style.display = "block";
  setTimeout(()=>el.style.display="none", 2000);
}

// === ğŸ å½©è›‹è§¸ç™¼ç¤ºæ„ ===
function triggerEgg(type) {
  playSound(type==="bonus"?"bonus":"mystery");
  alert(type==="bonus"?"ğŸ æ­å–œç²å¾—é¡å¤–5åˆ†ï¼":"ğŸ”® è§¸ç™¼éš±è—ä»»å‹™ï¼");
}

